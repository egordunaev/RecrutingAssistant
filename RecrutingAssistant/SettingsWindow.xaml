<Window x:Class="RecrutingAssistantApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecrutingAssistantApp"
        mc:Ignorable="d"
        Title="Настройки подключения" Height="190" Width="316" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Сервер" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <TextBlock Text="База данных" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <TextBlock Text="Пользователь" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <TextBlock Text="Пароль" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <TextBlock Text="Аутентификация Windows" Grid.Row="4" Grid.Column="0" Width="145"  HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <TextBox Name="tbServer" Grid.Row="0" Grid.Column="1" Margin="3" Width="145" HorizontalAlignment="Stretch"/>
        <TextBox Name="tbDataBase" Grid.Row="1" Grid.Column="1" Margin="3" Width="145" HorizontalAlignment="Stretch"/>
        <TextBox Name="tbUser" Grid.Row="2" Grid.Column="1" Margin="3" Width="145" HorizontalAlignment="Stretch"/>
        <TextBox Name="tbPassword" Grid.Row="3" Grid.Column="1" Margin="3" Width="145" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <CheckBox Name="cbAuth" Grid.Row="4" Grid.Column="1" Margin="3" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="cbAuth_Checked" Unchecked="cbAuth_Unchecked"/>
        <Button Name="btnSave" Grid.Row="5" Grid.Column="0" Content="Сохранить" Margin="3" Height="25" Width="145" HorizontalAlignment="Stretch" Click="btnSave_Click"/>
        <Button Name="btnCancel" Grid.Row="5" Grid.Column="1" Content="Отмена" Margin="3" Height="25" Width="145" HorizontalAlignment="Stretch" Click="btnCancel_Click"/>
    </Grid>
</Window>
